{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "open-write",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.5",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "@ai-sdk/openai": "2.0.89",
      "@tsconfig/bun": "1.0.9",
      "@types/bun": "1.3.5",
      "@types/node": "22.13.9",
      "ai": "5.0.124",
      "hono": "4.10.7",
      "typescript": "5.8.2",
      "zod": "4.1.8"
    }
  },
  "scripts": {
    "dev": "bun run dev:all",
    "dev:openwrite": "bun run --cwd packages/openwrite dev",
    "dev:web": "bun run --cwd packages/web dev",
    "dev:all": "bun run dev:openwrite & bun run dev:web",
    "start:openwrite": "bun run --cwd packages/openwrite start",
    "start:web": "bun run --cwd packages/web start",
    "start:all": "bun run start:openwrite & bun run start:web",
    "test": "bun run test:openwrite",
    "test:openwrite": "bun run --cwd packages/openwrite test",
    "typecheck": "bun run typecheck:openwrite && bun run typecheck:web",
    "typecheck:openwrite": "bun run --cwd packages/openwrite typecheck",
    "typecheck:web": "bun run --cwd packages/web typecheck",
    "lint:openwrite": "bun run --cwd packages/openwrite lint",
    "lint:web": "bun run --cwd packages/web lint",
    "build:web:ci": "OW_API_BASE=http://127.0.0.1:3000 OW_PROXY_TOKEN=ci-openwrite-proxy-token bun run --cwd packages/web build",
    "ci:check": "bun run test:openwrite && bun run typecheck:openwrite && bun run typecheck:web && bun run lint:openwrite && bun run lint:web && bun run build:web:ci"
  },
  "dependencies": {
    "@ai-sdk/openai": "catalog:",
    "@e2b/code-interpreter": "^2.3.3",
    "ai": "catalog:",
    "dotenv": "^17.2.4",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@tsconfig/bun": "catalog:",
    "@types/bun": "catalog:",
    "@types/node": "catalog:",
    "typescript": "catalog:"
  }
}
